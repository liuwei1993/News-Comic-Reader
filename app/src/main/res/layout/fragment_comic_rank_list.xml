<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/ranking_sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width="40dp"
        tl:tl_tab_width="60dp"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="@color/color_transparent_88"
        tl:tl_textsize="15sp"
        tl:tl_underline_color="@color/color_transparent_88"
        tl:tl_underline_height="0.5dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ranking_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>