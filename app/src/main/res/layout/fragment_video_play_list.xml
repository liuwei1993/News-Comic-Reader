<?xml version="1.0" encoding="utf-8"?>
<com.song.sunset.utils.loadingmanager.ProgressLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progress__"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    progressActivity:emptyBackgroundColor="#FFFFFF"
    progressActivity:emptyContentTextColor="#000000"
    progressActivity:emptyTitleTextColor="#000000"
    progressActivity:errorBackgroundColor="#FFFFFF"
    progressActivity:errorButtonTextColor="#000000"
    progressActivity:errorContentTextColor="#000000"
    progressActivity:errorTitleTextColor="#000000"
    progressActivity:loadingBackgroundColor="#FFFFFF">

    <com.song.sunset.views.LoadMoreRecyclerView
        android:id="@+id/rv_video_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/id_loading_more_progress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rect_gradient"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar_"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.song.video.SimplePlayerLayout
        android:id="@+id/video_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</com.song.sunset.utils.loadingmanager.ProgressLayout>