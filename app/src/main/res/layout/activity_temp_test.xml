<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grey_500">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:onClick="onTempTestFlowButtonClick"/>

    <com.song.sunset.widget.TextSwitchView
        android:id="@+id/textswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/image_dot_back"
        android:layout_width="14px"
        android:layout_height="14px"
        android:layout_centerInParent="true"
        android:src="@drawable/goods_black_dot"/>

    <ImageView
        android:id="@+id/image_dot"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_centerInParent="true"
        android:src="@drawable/goods_white_dot"/>

    <com.song.sunset.widget.MultiCircleView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.song.sunset.widget.TouchFollowView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"/>

