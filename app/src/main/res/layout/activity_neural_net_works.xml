<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.temp.NeuralNetWorksActivity">

    <com.song.sunset.widget.neural.NeuralNetWorksView
        android:id="@+id/nnw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:neural_connection_threshold="128"
        app:neural_dot_color="@color/white"
        app:neural_dot_radius="2"
        app:neural_element_amount="64"
        app:neural_line_color="@color/white"
        app:neural_speed="4" />

    <Button
        android:id="@+id/add_wall_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/shape_interest_selection_blue_bg"
        android:onClick="addWallPaper"
        android:padding="10dp"
        android:text="设为桌面背景"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/shape_interest_selection_blue_bg"
        android:onClick="setting"
        android:padding="10dp"
        android:text="设置"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_transparent_bb"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_dot_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            tools:text="圆点数量：64个" />

        <SeekBar
            android:id="@+id/sb_dot_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:max="256"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:progress="64"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/seek_thumb" />

        <TextView
            android:id="@+id/txt_dot_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            tools:text="圆点速度：4" />

        <SeekBar
            android:id="@+id/sb_dot_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:max="16"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:progress="4"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/seek_thumb" />

        <TextView
            android:id="@+id/txt_connection_threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            tools:text="连线阀值：128" />

        <SeekBar
            android:id="@+id/sb_connection_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:max="256"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:progress="128"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/seek_thumb" />

        <TextView
            android:id="@+id/txt_dot_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            tools:text="圆点半径：2" />

        <SeekBar
            android:id="@+id/sb_dot_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:max="8"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:progress="2"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/seek_thumb" />

        <Button
            android:id="@+id/bt_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/shape_interest_selection_blue_bg"
            android:onClick="confirm"
            android:padding="10dp"
            android:text="预览"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>